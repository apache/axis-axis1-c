<?xml version="1.0"?>
<!DOCTYPE project [
        <!ENTITY properties SYSTEM "file:xmls/properties.xml">
        <!ENTITY paths  SYSTEM "file:xmls/path_refs.xml">
        <!ENTITY taskdefs SYSTEM "file:xmls/taskdefs.xml">
]>

<!-- =================================================================== -->

<project default="compile" basedir=".">

        &properties;
        &paths;
        &taskdefs;

  <target name="compile">
    <mkdir dir="${build.dest}"/>
    <mkdir dir="${build.lib}"/>

    <!-- build my ForEach task -->
    <echo message="Building ForEach" />
    <javac srcdir="${axis.home}" destdir="${build.dest}">
      <classpath refid="classpath"/>
      <include name="test/foreachTask/*.java" />
    </javac>

    <!-- build the RunAxisFunctionalTest task -->
    <echo message="Building RunAxisFunctionalTest" />
    <javac srcdir="${axis.home}" destdir="${build.dest}">
      <classpath refid="classpath"/>
      <include name="test/functional/ant/*.java" />
    </javac>

    <!-- build the wsdl2java and java2wsdl tasks -->
    <echo message="wsdl2java and java2wsdl" />
    <javac srcdir="${axis.home}" destdir="${build.dest}" debug="${debug}">
      <classpath>
        <pathelement location="${build.lib}/${name}.jar"/>
        <pathelement location="${build.lib}/${jaxrpc}.jar"/>
        <path refid="classpath"/>
      </classpath>
      <include name="test/wsdl/*.java" />
    </javac>
  </target>
</project>
